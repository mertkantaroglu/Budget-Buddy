<%= render partial: 'shared/navbar', locals: {title: 'Add New Category'}%>

<br>
<div class="d-flex flex-column text-center bg-white p-1 m-1">
  <%= form_with model: @category, url: categories_path do |form| %>
    <div class='category-info'>
      <%= form.text_field :name, autofocus: true, placeholder: 'Enter category name', class:'form-control' %>
    </div>
    <div class='category-info'>
      <%= form.text_field :icon, autofocus: true, placeholder: 'Enter icon URL', class:'form-control' %>
    </div>

    <div class='d-flex flex-column fixed-bottom text-center w-100 p-3', style='background-color: #5fb523;'>
      <%= form.submit "Save", class:'text-decoration-none text-white border border-white p-2 fs-5 fw-semibold', style:'background-color: #5fb523;' %>
    </div>
  <% end %>
</div>
