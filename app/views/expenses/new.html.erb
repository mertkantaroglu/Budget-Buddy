<%= render partial: 'shared/navbar', locals: {title: 'Add New Expense'}%>

<br>

<div>
  <%= form_with model: @expense, url: category_expenses_path do |form| %>
    <div class="d-flex flex-column justify-content-center align-items-center text-center bg-white m-auto p-1 w-50">
      <div class='expense-info'>
        <%= form.text_field :name, autofocus: true, placeholder: 'Enter expense name',class:'form-control' %>
      </div>
      <div class='expense-info'>
        <%= form.number_field :amount, autofocus: true, placeholder: 'Enter amount',class:'form-control'%>
      </div>
      <div class='expense-info fw-medium'>
        <%= form.label :category_id, 'Select Categories: ' %>
      </div>
      <div class='expense-info'>
        <%= form.select :category_id, options_for_select(current_user.categories.map { |category| [category.name, category.id] }), { include_hidden: false, multiple: true, required: true }, { class: 'custom-select' } %>
    </div>

    </div>
    <div class='d-flex flex-column fixed-bottom text-center w-100 p-3', style='background-color: #5fb523;'>
    <%= form.submit "Save", class:'text-decoration-none text-white border border-white p-2 fs-5 fw-semibold', style:'background-color: #5fb523;' %>
  </div>
  <% end %>
</div>
